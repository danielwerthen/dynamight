<Window x:Class="KinectOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="580" Width="640" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Name="ColorButton" Content="Color" Width="75"/>
            <Button Name="InfraButton" Content="Infra" Width="75"/>
            <Button Name="DepthButton" Content="Depth" Width="75"/>
            <Button Name="SaveButton" Content="Save Image" Width="75"/>
        </StackPanel>
        <Image Name="Image" Grid.Row="1"/>
    </Grid>
</Window>
