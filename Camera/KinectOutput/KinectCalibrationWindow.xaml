<Window x:Class="KinectOutput.KinectCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KinectCalibrationWindow" Height="600" Width="1280">
    <Grid>
        <Image Name="Display" Width="640" Height="480" HorizontalAlignment="Left"/>
        <Image Name="DisplayHelp" Width="640" Height="480" Opacity="0.5" HorizontalAlignment="Left" IsHitTestVisible="False"/>
        <Image Name="DisplayAxes" Width="640" Height="480" Opacity="0.5" HorizontalAlignment="Left" IsHitTestVisible="False"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="200">
            <ToggleButton Name="Pred" Content="Point Red" Checked="Pred_Checked"/>
            <ToggleButton Name="Pblue" Content="Point Blue" Checked="Pblue_Checked"/>
            <ToggleButton Name="Pyellow" Content="Point Yellow" Checked="Pyellow_Checked"/>
            <Button Name="OK" Content="OK" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
